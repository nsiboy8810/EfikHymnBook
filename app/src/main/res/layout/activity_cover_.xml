<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/whitebackground"
    tools:context="com.example.nyongnsikak.efikhymnbook.cover_Activity"
    android:id="@+id/coverLayout">
        <TextView
        android:paddingTop="60dp"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/curvededge"
        android:id="@+id/myBackColour"
        android:textStyle="italic" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:id="@+id/searchText"
        android:inputType="number"
        android:gravity="center"
        android:text="@string/search_no"
        android:textColor="#d3d3d3"
        android:clickable="true"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Acknowledgement"
        android:id="@+id/acknowledge"
        android:layout_below="@+id/AboutHynms"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:background="@drawable/whitebackground"/>

    <Button
        android:text="@string/goTo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/myOwnHymns"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:background="@drawable/curvededge"
        android:onClick="goHymns"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/firstSearch"
        android:layout_below="@+id/myOwnHymns"
        android:layout_centerHorizontal="true"
        android:id="@+id/mySearch"
        android:textSize="20sp"
        android:background="@drawable/curvededge"
        android:onClick="searchHymns"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/backSearch"
        android:layout_below="@+id/myOwnHymns"
        android:layout_centerHorizontal="true"
        android:id="@+id/myBack"
        android:textSize="20sp"
        android:background="@drawable/curvededge"
        android:onClick="backHymns"
        android:visibility="invisible"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/About"
        android:layout_below="@+id/mySearch"
        android:layout_centerHorizontal="true"
        android:id="@+id/AboutHynms"
        android:textSize="20sp"
        android:background="@drawable/curvededge"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/abc_ic_search_api_mtrl_alpha"
        android:layout_toRightOf="@+id/searchText"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:layout_marginTop="67dp"
        android:onClick="goSearch"
        android:clickable="true"
        android:contentDescription="@string/value"
        android:layout_toEndOf="@+id/searchText"/>


</RelativeLayout>
